<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- =================== SERVLETS =================== -->

    <!-- Login -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Register -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Patient Dashboard -->
    <servlet>
        <servlet-name>PatientDashboardServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.PatientDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PatientDashboardServlet</servlet-name>
        <url-pattern>/patientDashboard</url-pattern>
    </servlet-mapping>

    <!-- Doctor Dashboard -->
    <servlet>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.DoctorDashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DoctorDashboardServlet</servlet-name>
        <url-pattern>/doctorDashboard</url-pattern>
    </servlet-mapping>

    <!-- Admin Dashboard -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.AdminServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/adminDashboard</url-pattern>
    </servlet-mapping>

    <!-- Appointment Booking -->
    <servlet>
        <servlet-name>AppointmentServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.AppointmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AppointmentServlet</servlet-name>
        <url-pattern>/bookAppointment</url-pattern>
    </servlet-mapping>

    <!-- Prescriptions -->
    <servlet>
        <servlet-name>PrescriptionServlet</servlet-name>
        <servlet-class>com.hellohealth.controller.PrescriptionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PrescriptionServlet</servlet-name>
        <url-pattern>/addPrescription</url-pattern>
    </servlet-mapping>

    <!-- =================== SESSION CONFIG =================== -->
    <session-config>
        <session-timeout>30</session-timeout> <!-- in minutes -->
    </session-config>

    <!-- =================== WELCOME FILES =================== -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
